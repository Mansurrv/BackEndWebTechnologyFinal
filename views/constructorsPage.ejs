<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Constructors | F1Tracker</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/page.css">
    <link rel="stylesheet" href="/css/styleCOnstructors.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="icon" type="image/x-icon" href="https://cdn-icons-png.flaticon.com/512/1995/1995515.png">
</head>
<body class="page-body">
    <%- include('partials/navbar', { user }) %>

    <header class="page-hero">
        <div class="container">
            <h1 class="page-title">Constructors Championship</h1>
            <p class="page-subtitle">Current 2024 season standings with team performance highlights.</p>
        </div>
    </header>

    <section class="page-content">
        <div class="container">
            <div class="content-card table-card">
                <div class="table-container">
                    <table class="data-table">
                        <thead>
                            <tr>
                                <th>Position</th>
                                <th>Team</th>
                                <th>Drivers</th>
                                <th>Points</th>
                                <th>Wins</th>
                                <th>Podiums</th>
                            </tr>
                        </thead>
                        <tbody id="constructorsBody">
                            <tr>
                                <td colspan="6">Loading constructors...</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>

    <%- include('partials/auth-modals') %>

    <script>
    async function loadConstructors() {
        try {
        const res = await fetch('/api/constructors');

        if (!res.ok) {
            throw new Error(`HTTP error ${res.status}`);
        }

        const result = await res.json();
        const constructors = result.data || [];

        const tbody = document.getElementById('constructorsBody');
        tbody.innerHTML = '';

        if (!constructors.length) {
            tbody.innerHTML = '<tr><td colspan="6">No constructors found.</td></tr>';
            return;
        }

        constructors.forEach(c => {
            const tr = document.createElement('tr');

            tr.innerHTML = `
            <td>${c.position ?? ''}</td>
            <td class="team-cell">
                <div class="team-info">
                <div class="team-color" style="background-color: ${c.color || '#999'};"></div>
                <span>${c.team ?? ''}</span>
                </div>
            </td>
            <td>${c.drivers ?? ''}</td>
            <td class="points">${c.points ?? 0}</td>
            <td>${c.wins ?? 0}</td>
            <td>${c.podiums ?? 0}</td>
            `;
            tbody.appendChild(tr);
        });
        } catch (err) {
        console.error('Failed to load constructors:', err);
        const tbody = document.getElementById('constructorsBody');
        tbody.innerHTML = '<tr><td colspan="6">Failed to load constructors.</td></tr>';
        }
    }

    window.onload = loadConstructors;
    </script>
    <script src="/js/theme.js"></script>
    <script src="/js/nav.js"></script>
    <script src="/js/auth.js"></script>
</body>
</html>
