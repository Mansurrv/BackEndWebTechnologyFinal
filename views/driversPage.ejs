<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Drivers | F1Tracker</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/page.css">
    <link rel="stylesheet" href="/css/styleCOnstructors.css">
    <link rel="stylesheet" href="/css/searchStyle.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200&icon_names=search" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="icon" type="image/x-icon" href="https://cdn-icons-png.flaticon.com/512/1995/1995515.png">
</head>
<body class="page-body">
    <%- include('partials/navbar', { user }) %>

    <header class="page-hero">
        <div class="container">
            <h1 class="page-title">Drivers Championship</h1>
            <p class="page-subtitle">Explore the 2024 standings, performance stats, and driver highlights.</p>
        </div>
    </header>

    <section class="page-content">
        <div class="container">
            <div class="search-section">
                <form class="searchh">
                    <div class="search">
                        <span class="search-icon material-symbols-outlined">search</span>
                        <input type="search" class="search-input" id="search-input" placeholder="Search drivers or constructors">
                    </div>
                </form>
                <div class="results" id="results"></div>
                <div class="loading"></div>
            </div>

            <div class="content-card table-card">
                <div class="table-container">
                    <table class="data-table">
                        <thead>
                            <tr>
                                <th>Position</th>
                                <th>Driver</th>
                                <th>Team</th>
                                <th>Points</th>
                                <th>Wins</th>
                                <th>Pole Positions</th>
                                <th>Starts</th>
                            </tr>
                        </thead>
                        <tbody id="drivers-body">
                            <tr>
                                <td colspan="7">Loading drivers...</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>

    <%- include('partials/auth-modals') %>

    <script src="/js/search.js"></script>
    <script src="/js/drivers.js"></script>
    <script src="/js/theme.js"></script>
    <script src="/js/nav.js"></script>
    <script src="/js/auth.js"></script>
</body>
</html>
